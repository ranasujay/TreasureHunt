<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Leaderboard</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script>
    // Refresh page every 2 minutes (120000 ms)
    setTimeout(function(){
      window.location.reload(1);
    }, 1200);
  </script>
</head>
<body class="bg-gray-900 p-8">

  <!-- Back Button -->
  <a href="/admin/register" class="text-white bg-gray-700 hover:bg-gray-600 py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition ease-in-out duration-150 absolute top-4 left-4">
    ‚Üê Back
  </a>

  <!-- Total Teams Count -->
  <div class="absolute top-4 right-4 text-white bg-gray-700 hover:bg-gray-600 py-2 px-4 rounded-md">
    Total Teams: <%= users.length %>
  </div>

  <h1 class="text-3xl font-semibold text-white text-center mb-6">Leaderboard</h1>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-gray-800 rounded-lg shadow-lg">
      <thead>
        <tr class="w-full bg-gray-700 text-gray-300">
          <th class="py-2">Rank</th>
          <th class="py-2">Name</th>
          <th class="py-2">Current Level</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user, index) => { %>
          <tr class="text-white">
            <td class="border px-4 py-2"><%= index + 1 %></td>
            <td class="border px-4 py-2"><%= user.name %></td>
            <td class="border px-4 py-2"><%= user.currLevel %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>
